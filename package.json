{
	"name": "conqueror",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		]
	},
	"catalog": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.13",
		"typescript": "^5",
		"@types/node": "^22.13.14",
		"@types/bun": "^1.3.5"
	},
	"type": "module",
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "bun run --filter '*' dev",
		"build": "bun run --filter '*' build",
		"check-types": "bun run --filter '*' check-types",
		"dev:native": "bun run --filter native dev",
		"dev:web": "bun run --filter web dev",
		"db:push": "bun run --filter @conqueror/db db:push",
		"db:studio": "bun run --filter @conqueror/db db:studio",
		"db:generate": "bun run --filter @conqueror/db db:generate",
		"db:migrate": "bun run --filter @conqueror/db db:migrate",
		"db:local": "bun run --filter @conqueror/db db:local"
	},
	"dependencies": {
		"@conqueror/env": "workspace:*",
		"dotenv": "catalog:",
		"radash": "^12.1.1",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@conqueror/config": "workspace:*",
		"@google/genai": "^1.34.0",
		"@types/bun": "catalog:",
		"@types/node": "catalog:",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"typescript": "catalog:"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.3.5"
}
